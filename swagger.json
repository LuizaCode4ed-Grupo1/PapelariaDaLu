{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Papelaria da Lu",
        "description": "API desenvolvida para o gerenciamento de clientes, produtos e listas de desejos da Papelaria da Lu."
    },
    "host": "localhost:3000",
    "basePath": "/",
    "tags": [
      {
        "name": "produtos",
        "description": "Tudo sobre nossos produtos"
      },
      {
        "name": "clientes",
        "description": "Tudo sobre nossos clientes"
      }
    ],
    "schemes": [
        "http"
    ],
    "paths": {
        "/produtos": {
          "post": {
            "tags": ["produtos"],
            "summary": "Adicionar um novo produto",
            "description": "Adiciona um novo produto no banco de dados.",
            "parameters": [
              {
                "name": "body",
                "in": "body",
                "description": "Objeto que representa o produto a ser adicionado no banco de dados",
                "required": "true",
                "schema": {
                  "name": "nome",
                  "description": "descrição"
                }
              }
            ],
            "responses": {
              "200": {
                "description": "ok"
              }
            }
        },
            "get": {
                "tags": ["produtos"],
                "summary": "Buscar todos os produtos",
                "description": "Retorna todos os produtos inseridos no sistema. Se o cliente não informar os parâmetros de página e limite, retorna uma busca paginada começando na primeira página de resultados e com limite de 5",
                "parameters": [
                  {
                    "name": "pagina",
                    "in": "query",
                    "description": "Número da página de resultados",
                    "type": "integer"
                  },
                  {
                    "name": "limite",
                    "in": "query",
                    "description": "Número de resultados por página",
                    "type": "integer"
                  }
                ],
                "responses": {
                    "200": "Produto cadastrado com sucesso",
                    "501": "socorro"
                }
            }
        }
    }
}